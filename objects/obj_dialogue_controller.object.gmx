//---------------------------------------------------------------------------


//--------------------TEXT SETTINGS------------------------------------------
draw_set_font(fnt_default);
draw_set_halign(fa_center);
draw_set_valign(fa_top);
draw_set_colour(c_white);
//---------------------------------------------------------------------------


//---------------------DRAW THE CURRENT LINE OF THE NPC----------------------
draw_text_ext(x, y+20, text, font_get_size(fnt_default)+4, room_width - 20);
//---------------------------------------------------------------------------


//-----------------DRAW THE INTERACTIVE RESPONSES IF THEY EXIST--------------
draw_set_color(c_yellow);
draw_set_font(fnt_interaction);
draw_set_halign(fa_left);

if branching{
    for(var i = 0; i &lt; options; i++){
        if obj_npc.option[branch,i] != "" {
            draw_text_ext(
                        40, 310 + i * font_get_size(fnt_interaction)+2, 
                        string(i+1) + ". " + string(obj_npc.option[branch,i]), 
                        font_get_size(fnt_default)+4, room_width - 20
            );
        }
    }
}
