            <string>///Step

//-----------GET THE COUNT FOR CURRENT DIALOGUE BRANCH-----
if instance_exists(obj_npc.talk[branch,0]){
    dialogues = array_length_2d(obj_npc.talk, branch);
} else dialogues = 0;

if instance_exists(obj_npc.option[branch,0]){
    options = array_length_2d(obj_npc.option, branch);
} else options = 0;

//----------------------------------------------------------


//-----------CHECK IF WE ARE ON THE FINAL LINE--------------
if pos == dialogues {
    //If there are dialogue options, then we have a branching point
    if options &gt; 0 {
        branching = true;
    } else branching = false;
}
//----------------------------------------------------------


//----------IF WE ARE BRANCHING, CHECK FOR KEYBOARD INPUT---
if branching {
    if keyboard_check_released(ord('1')){
        if obj_npc.option[branch,0] != "" {
            branch = 1;
            pos = 0;
            scr_dialogue_draw();
            branching=false;
        }
    }
    if keyboard_check_released(ord('2')){
        if obj_npc.option[branch,1] != "" {
            branch = 2;
            pos = 0;
            scr_dialogue_draw();
            branching=false;
        }
    }
    if keyboard_check_released(ord('3')){
        if obj_npc.option[branch,2] != "" {
            branch = 3;
            pos = 0;
            scr_dialogue_draw();
            branching=false;
        }
    }
    if keyboard_check_released(ord('4')){
        if obj_npc.option[branch,3] != "" {
            branch = 4;
            pos = 0;
            scr_dialogue_draw();
            branching=false;
        }
    }
}
